<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|center"
    android:padding="15sp"
    tools:context=".AnimalGameMainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the "
        android:textSize="30sp"
        android:layout_marginBottom="10sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/animalgame_logo"
        android:contentDescription="Logo"
        android:layout_marginBottom="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="?android:buttonBarStyle">

        <Button
            android:id="@+id/new_game"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text="Play new origins"
            android:onClick="playGame"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            style="?android:buttonBarButtonStyle" />

        <Button
            android:id="@+id/resume_game"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text="Resume story"
            android:onClick="playGame"
            android:textSize="17sp"
            android:layout_weight="1"
            style="?android:buttonBarButtonStyle" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Outsmart the game"
        android:onClick="testGame"
        style="?android:buttonBarButtonStyle"
        android:textSize="17sp"
        android:layout_marginBottom="10sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intro_text"
        android:textSize="16sp"/>
</LinearLayout>